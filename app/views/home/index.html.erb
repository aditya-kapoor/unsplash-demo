<div class="card">
  <div class="card-body">
    <h5 class="card-title">Search</h5>
    <%= form_tag search_home_index_path, method: :get do %>
      <div class="mb-3"><%= text_field_tag :query, nil, name: 'filters[query]', class: 'form-control' %></div>
      <div class="mb-3">
        <%= label_tag :color, nil, class: 'form-label' %>
        <%= select_tag :color, options_for_select(['black_and_white', 'black', 'white', 'yellow', 'orange', 'red', 'purple', 'magenta', 'green', 'teal', 'blue'].collect { |x| [x.titleize, x]}), include_blank: true ,name: 'filters[color]', class: 'form-control' %>
      </div>
      <div class="mb-3">
        <%= submit_tag 'Search', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>

